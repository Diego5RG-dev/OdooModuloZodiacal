
<odoo>
  <data>
    <record model="ir.ui.view" id="partner_chinese_stats_form">
      <field name="name">partner.chinese.stats.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/> 
      <field name="arch" type="xml">
        
        <xpath expr="//notebook" position="inside">
          <page string="Signo Chino">
            <group>
              <field name="f_nac"/>
              <field name="edad"/>
              <field name="signo_chino"/>
            </group>
          </page>
        </xpath>
        
        <xpath expr="//notebook" position="inside">
          <page string="Membresia">
            <group>
              <field name="codigo_socio" string="CÃ³digo de Socio"/>
              <field name="nivel_fidelidad" string="Nivel de Fidelidad"/>
            </group>
          </page>
        </xpath>

      </field>
    </record>

    <record model="ir.ui.view" id="partner_chinese_stats_list">
        <field name="name">partner.chinese.stats.list</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='complete_name']" position="after">  
                <field name="signo_chino"/>
                <field name="nivel_fidelidad" 
                       decoration-primary="nivel_fidelidad in ('gold', 'premium')" 
                       decoration-bf="nivel_fidelidad == 'gold'"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_chinese_stats_kanban">
        <field name="name">partner.chinese.stats.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>  
        <field name="arch" type="xml">
            <xpath expr="//div[@class='mb-1']/field[@name='display_name']" position="after">
                
                <div class="fw-bold">
                    <field name="codigo_socio"/>
                </div>
                
                <field name="signo_chino"/>
            </xpath>
        </field>
    </record>

